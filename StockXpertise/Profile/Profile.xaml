<Page x:Class="StockXpertise.Profile.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StockXpertise.components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">

    <Grid x:Name="gridProfile" Background="White">
        <local:UserControl1/>
        <Frame x:Name="profile" NavigationUIVisibility="Hidden"/>
        
        <Grid Height="250" Width="250" Margin="338,42,212,158">
            <Image Source="/Images/Logo.png" Stretch="UniformToFill" Margin="0,0,11,23" >
                <Image.Clip>
                    <EllipseGeometry Center="150,150" RadiusX="135" RadiusY="135"/>
                </Image.Clip>
            </Image>
        </Grid>
        <Rectangle Height="111" Margin="221,266,67,73" Stroke="#FFACACAC" Width="512">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FFA7A7A7" Offset="0"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="Nom" Height="23" Margin="251,273,471,154" Width="78"/>
        <Label Content="Prénom" Height="23" Margin="251,297,471,130" Width="78"/>
        <Label Content="Mail" Height="23" Margin="251,323,471,104" Width="78"/>
        <Label Content="Status" Height="23" Margin="251,346,471,81" Width="78"/>
        <Rectangle Height="111" Margin="338,266,100,73" Stroke="#FFACACAC" Width="362" Fill="White"/>
        <Label x:Name="ProfileFirstName" Content="Nom " Height="23" Margin="357,273,119,154" Width="324"/>
        <Label x:Name="ProfileLastName" Content="Prénom" Height="23" Margin="357,297,119,130" Width="324"/>
        <Label x:Name="ProfileMail" Content="Mail" Height="23" Margin="357,323,119,104" Width="324"/>
        <Label x:Name="ProfileStatus" Content="Status" Height="23" Margin="357,346,119,81" Width="324"/>
        <Button Content="Déconnexion" Height="30" Margin="429,396,281,24" Width="90" Click="Button_Click"/>
    </Grid>
</Page>
