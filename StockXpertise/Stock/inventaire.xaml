<Page x:Class="StockXpertise.Stock.inventaire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StockXpertise.components"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1500"
      Title="inventaire">

    <Grid>
        <local:UserControl1/>
        <Grid Margin="173,-2,0,2">
            <Border BorderThickness="2" Margin="0,188,0,0" CornerRadius="10" VerticalAlignment="Top" HorizontalAlignment="Center" Height="69" Width="739" Background="#FFFFB996">
