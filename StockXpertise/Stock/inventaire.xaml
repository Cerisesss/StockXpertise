            <Label Content="Stock réel" HorizontalAlignment="Left" Height="30" Margin="746,337,0,0" VerticalAlignment="Top" Width="75"/>
            <TextBlock x:Name="stock_actuel" TextAlignment="Center" HorizontalAlignment="Left" Height="14" Margin="480,347,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116"/>
            <TextBlock x:Name="emplacement_actuel" TextAlignment="Center" HorizontalAlignment="Left" Height="16" Margin="480,407,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116"/>
            <Label Content="Emplacement" HorizontalAlignment="Left" Height="30" Margin="374,401,0,0" VerticalAlignment="Top" Width="91"/>
            <Label Content="Emplacement" HorizontalAlignment="Left" Height="30" Margin="746,399,0,0" VerticalAlignment="Top" Width="92"/>
            <TextBox x:Name="emplacement_reel" HorizontalAlignment="Left" Height="20" Margin="844,404,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
            <TextBox x:Name="stock_reel" HorizontalAlignment="Left" Height="20" Margin="844,343,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        </Grid>
    </Grid>
</Page>
