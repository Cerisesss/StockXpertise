            <Rectangle HorizontalAlignment="Left" Height="168" Margin="716,307,0,0" Stroke="Black" VerticalAlignment="Top" Width="267" Fill="#FFFFDDCC"/>
            <Button Content="Valider" HorizontalAlignment="Left" Height="40" Margin="796,528,0,0" VerticalAlignment="Top" Width="108" Click="Sauvegarder" Style="{StaticResource CustomButtonStyle}" BorderBrush="White" Background="White"/>
            <Button x:Name="button" Content="Annuler" HorizontalAlignment="Left" Height="40" Margin="427,528,0,0" VerticalAlignment="Top" Width="107" Click="Annuler" Style="{StaticResource CustomButtonStyle}" RenderTransformOrigin="0.915,1.521" BorderBrush="White" Background="White"/>
