            <TextBlock Text="Affiche toi correctement please" x:Name="nom_item" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="0,206,0,0" Width="703" VerticalAlignment="Top" TextAlignment="Center" Height="43" Foreground="#FF303030"/>
            <Rectangle Stroke="Black" Fill="#FFEBF3E8" Margin="347,307,0,0" HorizontalAlignment="Left" Height="168" VerticalAlignment="Top" Width="267"/>
