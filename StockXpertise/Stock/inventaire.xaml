<Page x:Class="StockXpertise.Stock.inventaire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StockXpertise.Stock"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1024"
      Title="inventaire">

    <Grid>
        <Rectangle Stroke="Black" Fill="#FFD5F3B5" Margin="235,142,0,0" HorizontalAlignment="Left" Height="169" VerticalAlignment="Top" Width="267"/>
        <Rectangle HorizontalAlignment="Left" Height="0" Margin="278,244,0,0" Stroke="Black" VerticalAlignment="Top" Width="150"/>
        <Rectangle HorizontalAlignment="Left" Height="169" Margin="604,142,0,0" Stroke="#FFEBDBDB" VerticalAlignment="Top" Width="267" Fill="#FFCE8080"/>
        <Button Content="Sauvegarder" HorizontalAlignment="Left" Height="34" Margin="604,396,0,0" VerticalAlignment="Top" Width="128" BorderBrush="{Binding Visibility.Hidden.Hidden, ElementName=button}" Click="Sauvegarder">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF6BBE52" Offset="0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button" Content="Annuler" HorizontalAlignment="Left" Height="34" Margin="376,396,0,0" VerticalAlignment="Top" Width="126" BorderBrush="{Binding Visibility.Hidden, ElementName=button}" Click="Annuler" RenderTransformOrigin="0.915,1.521">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFAEAEAE"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FFD7513B" Offset="0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Stock actuel" HorizontalAlignment="Left" Height="30" Margin="262,174,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Stock réel" HorizontalAlignment="Left" Height="30" Margin="634,172,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock x:Name="stock_actuel" TextAlignment="Center" HorizontalAlignment="Left" Height="15" Margin="368,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116"/>
        <TextBlock x:Name="emplacement_actuel" TextAlignment="Center" HorizontalAlignment="Left" Height="17" Margin="368,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116"/>
        <Label Content="Emplacement" HorizontalAlignment="Left" Height="30" Margin="262,237,0,0" VerticalAlignment="Top" Width="91"/>
        <Label Content="Emplacement" HorizontalAlignment="Left" Height="30" Margin="634,235,0,0" VerticalAlignment="Top" Width="92"/>
        <TextBox x:Name="emplacement_reel" HorizontalAlignment="Left" Height="19" Margin="732,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="stock_reel" HorizontalAlignment="Left" Height="19" Margin="732,237,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Page>
