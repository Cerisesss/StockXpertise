        <Button x:Name="btnScanner" Content="Scanner" HorizontalAlignment="Left" Height="20" Margin="741,195,0,0" VerticalAlignment="Top" Width="224" Click="btnScanner_Click"/>
        <Label Content="Emplacement" FontWeight="Bold" HorizontalAlignment="Left" Height="26" Margin="638,566,0,0" VerticalAlignment="Top" Width="94"/>
        <Label Content="Emplacement" FontWeight="Bold" HorizontalAlignment="Left" Height="26" Margin="222,566,0,0" VerticalAlignment="Top" Width="91"/>
        <TextBox x:Name="code_emplacement_apres" HorizontalAlignment="Left" Height="20" Margin="741,569,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224"/>
        <TextBlock x:Name="code_emplacement_avant" TextAlignment="Center" HorizontalAlignment="Left" Height="14" Margin="341,573,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206"/>
    </Grid>
</Page>
