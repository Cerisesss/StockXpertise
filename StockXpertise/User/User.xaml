<Page x:Class="StockXpertise.User.User"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StockXpertise.components"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="User">

    <Grid x:Name="gridUser" Background="White">
        <local:UserControl1/>
        <Frame x:Name="user" NavigationUIVisibility="Hidden"/>

        <Rectangle HorizontalAlignment="Left" Height="36" Margin="255,146,0,0" Stroke="#FFACACAC" VerticalAlignment="Top" Width="137" RenderTransformOrigin="0.527,0.493">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFACACAC"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FFAEAEAE" Offset="0"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <ComboBox x:Name="comboBoxAffichage" HorizontalAlignment="Left" Height="36" Margin="392,146,0,0" VerticalAlignment="Top" Width="365" SelectionChanged="ComboBox_SelectionChanged_affichage"/>
        <Label Content="Affichage" HorizontalAlignment="Left" Height="30" Margin="277,149,0,0" VerticalAlignment="Top" Width="122"/>
        <DataGrid x:Name="MyDataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Height="475" Width="869" Margin="255,211,0,0"
            AutoGenerateColumns="True"
            AlternatingRowBackground="#F0F0F0"
            GridLinesVisibility="None"
            CanUserResizeColumns="True"
            CanUserResizeRows="False"
            SelectionMode="Single"
            RowHeight="40" SelectionChanged="MyDataGrid_SelectionChanged">

            <!-- Style des colonnes -->
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FFD2D2D2"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="15,10"/>
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
        <Button Content="Ajouter" HorizontalAlignment="Left" Height="36" Margin="987,146,0,0" VerticalAlignment="Top" Width="94" Click="Button_Click"/>
    </Grid>
</Page>
